{% comment %}
  CSS Variables - Mindvalley States Theme
  Defines all CSS custom properties for the theme
{% endcomment %}

<style>
  :root {
    /* Brand Colors */
    --color-primary: #7a12d4;
    --color-primary-dark: #6a0dad;
    --color-primary-light: #c4b5fd;
    --color-primary-bg: #f5f0ff;
    
    /* Product Colors */
    --color-focus: #3b82f6;
    --color-focus-light: #dbeafe;
    --color-zen: #10b981;
    --color-zen-light: #d1fae5;
    --color-bliss: #f59e0b;
    --color-bliss-light: #fef3c7;
    --color-dream: #6366f1;
    --color-dream-light: #e0e7ff;
    --color-gazm: #e11d48;
    --color-gazm-light: #fce7f3;
    
    /* Neutral Colors */
    --color-white: #ffffff;
    --color-black: #000000;
    --color-foreground: #0f131a;
    --color-background: #ffffff;
    
    /* Gray Scale */
    --gray-50: #f9fafb;
    --gray-100: #f3f4f6;
    --gray-200: #e5e7eb;
    --gray-300: #d1d5db;
    --gray-400: #9ca3af;
    --gray-500: #6b7280;
    --gray-600: #4b5563;
    --gray-700: #374151;
    --gray-800: #1f2937;
    --gray-900: #111827;
    
    /* Status Colors */
    --color-success: #10b981;
    --color-warning: #f59e0b;
    --color-error: #ef4444;
    
    /* Typography */
    --font-family-base: 'Grotesk-Regular', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    --font-family-medium: 'Grotesk-Medium', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    --font-family-bold: 'Grotesk-Bold', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    
    /* Spacing */
    --spacing-xs: 4px;
    --spacing-sm: 8px;
    --spacing-md: 16px;
    --spacing-lg: 24px;
    --spacing-xl: 32px;
    --spacing-2xl: 48px;
    --spacing-3xl: 64px;
    
    /* Border Radius */
    --radius-sm: 8px;
    --radius-md: 12px;
    --radius-lg: 16px;
    --radius-xl: 20px;
    --radius-full: 9999px;
    
    /* Shadows */
    --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.05);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
    
    /* Layout */
    --container-max-width: 1200px;
    --page-margin: 20px;
    --header-height: 72px;
    
    /* Transitions */
    --transition-fast: 0.15s ease;
    --transition-base: 0.2s ease;
    --transition-slow: 0.3s ease;
    
    /* Z-index Scale */
    --z-dropdown: 50;
    --z-sticky: 60;
    --z-modal-backdrop: 90;
    --z-header: 100;
    --z-modal: 200;
    --z-cart: 300;
  }
</style>
