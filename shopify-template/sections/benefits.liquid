<section class="benefits">
  <div class="mv-container">
    <div class="benefits-grid {% if section.settings.image_position == 'right' %}benefits-grid--reversed{% endif %}">
      <div class="benefits-image">
        {% if section.settings.image != blank %}
          <img 
            src="{{ section.settings.image | image_url: width: 800 }}" 
            alt="{{ section.settings.image.alt | default: section.settings.title }}"
            loading="lazy"
          >
        {% else %}
          {{ 'lifestyle-1' | placeholder_svg_tag }}
        {% endif %}
      </div>
      
      <div class="benefits-content">
        <h2 class="mv-type--headline3">{{ section.settings.title }}</h2>
        
        <ul class="benefit-list">
          {% for block in section.blocks %}
            {% if block.type == 'benefit' %}
              <li class="benefit-item" {{ block.shopify_attributes }}>
                <div class="benefit-icon" style="background-color: {{ block.settings.icon_bg | default: '#f5f0ff' }};">
                  {{ block.settings.icon }}
                </div>
                <div class="benefit-text">
                  <h4>{{ block.settings.title }}</h4>
                  <p>{{ block.settings.description }}</p>
                </div>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</section>

