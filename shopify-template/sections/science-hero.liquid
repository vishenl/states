<section class="hero science-hero">
  <div class="hero-content mv-container">
    {% if section.settings.show_badge %}
      <div class="hero-badge">
        {{ section.settings.badge_icon }} {{ section.settings.badge_text }}
      </div>
    {% endif %}

    <h1 class="mv-type--headline1">
      {{ section.settings.title_before }} <span>{{ section.settings.title_highlight }}</span> {{ section.settings.title_after }}
    </h1>

    <p class="hero-sub">{{ section.settings.subtitle }}</p>

    {% if section.settings.show_stats %}
      <div class="hero-stats">
        {% for block in section.blocks %}
          {% if block.type == 'stat' %}
            <div class="hero-stat" {{ block.shopify_attributes }}>
              <div class="hero-stat-number">{{ block.settings.value }}</div>
              <div class="hero-stat-label">{{ block.settings.label }}</div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Science Hero",
  "tag": "section",
  "class": "science-hero-section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_badge",
      "label": "Show badge",
      "default": true
