      "label": "Badge text",
      "default": "Research & Development"
    },
    {
      "type": "text",
      "id": "title_before",
      "label": "Title (before highlight)",
      "default": "The"
    },
    {
      "type": "text",
      "id": "title_highlight",
      "label": "Title (highlighted)",
      "default": "Science"
    },
    {
      "type": "text",
      "id": "title_after",
      "label": "Title (after highlight)",
      "default": "Behind States"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Every ingredient in our formulas is backed by peer-reviewed research and clinical studies."
    },
    {
      "type": "checkbox",
      "id": "show_stats",
      "label": "Show statistics",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "stat",
      "name": "Statistic",
      "settings": [
        {
          "type": "text",
