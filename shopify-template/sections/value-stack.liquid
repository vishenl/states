          }
        },
        {
          "type": "value_item",
          "settings": {
            "text": "<strong>DREAM</strong> - Deep, restorative sleep"
          }
        },
        {
          "type": "value_item",
          "settings": {
            "text": "<strong>GAZM</strong> - Intimacy & connection"
          }
        }
      ]
    }
  ]
}
{% endschema %}

