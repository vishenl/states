<section class="hero" style="{% if section.settings.background_gradient %}background: linear-gradient(180deg, {{ section.settings.gradient_start }} 0%, {{ section.settings.gradient_end }} 100%);{% else %}background-color: {{ section.settings.background_color }};{% endif %}">
  <div class="mv-container">
    {% if section.settings.show_badge and section.settings.badge_text != blank %}
      <div class="hero-badge">
        {{ section.settings.badge_icon }}
        {{ section.settings.badge_text }}
      </div>
    {% endif %}

    <h1 class="mv-type--headline1">
      {% if section.settings.title_highlight != blank %}
        {{ section.settings.title_before }} <span>{{ section.settings.title_highlight }}</span> {{ section.settings.title_after }}
      {% else %}
        {{ section.settings.title }}
      {% endif %}
    </h1>

    {% if section.settings.subtitle != blank %}
      <p class="hero-sub">{{ section.settings.subtitle }}</p>
    {% endif %}

    {% if section.settings.show_cta %}
      <a href="{{ section.settings.cta_link }}" class="btn-primary">
        {{ section.settings.cta_text }}
        {% if section.settings.show_cta_arrow %}
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        {% endif %}
      </a>
    {% endif %}

    {% if section.settings.show_trust_badges %}
      <div class="hero-trust">
        {% for block in section.blocks %}
          {% if block.type == 'trust_badge' %}
            <div class="trust-item">
              <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"/>
              </svg>
              {{ block.settings.text }}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

